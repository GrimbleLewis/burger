<div class="container">

    <div class="row d-flex justify-content-center">
        <div class="col-xs-12">
            <img src="../assets/img/burger.png" alt="burger">
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <h1>Eat-Da-Burger</h1>
    </div>
    <div class="row d-flex justify-content-center">
        <form class="create-form">
            <div class="form-group">
                <textarea id="burgerinput" name="burger" rows="5" cols="40"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Burger</button>
            <p>Add your own burger above!</p>
        </form>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-sm-4">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>{{this.id}}. {{this.burger_name}}</p>
                    <button type="button" class="change-devour btn btn-danger btn-sm" data-id="{{id}}" data-newdevour="{{devour}}">
                        {{#unless devour}}DEVOUR ME!{{/unless}}
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-4 d-flex justify-content-center">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{this.burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>